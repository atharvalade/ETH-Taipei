# Base URL of your app (use localhost for development, ngrok for mobile testing)
NEXTAUTH_URL=http://localhost:3000

# Optional: For production deployment
# NEXTAUTH_SECRET=random-string-min-32-chars

# World ID credentials - from World Developer Portal
WLD_CLIENT_ID=your-client-id-here
WLD_CLIENT_SECRET=your-client-secret-here

# World Developer Portal API Key
DEV_PORTAL_API_KEY=your-api-key-here

# World App ID - from Developer Portal
APP_ID=authentica-verify-app

# Action name for World ID verification
ACTION_NAME=World_MiniApp

# Blockchain network (for development)
# CHAIN_ID=1 # Ethereum Mainnet
# CHAIN_ID=11155111 # Sepolia

# API URL for the Authentica backend
NEXT_PUBLIC_VERCEL_API_URL=https://ipfs-api1-ethtaipei.vercel.app/api/authentica
BACKEND_API_URL=https://ipfs-api1-ethtaipei.vercel.app/api/authentica

# Rootstock integration
NEXT_PUBLIC_ROOTSTOCK_CONTRACT_ADDRESS=0x... # Deployed Rootstock payment receiver contract address
WORLD_CHAIN_CONTRACT_ADDRESS=0x... # Deployed World Chain payment verifier contract address
WORLD_CHAIN_RPC_URL=https://testnet-rpc.worldchain.cool # World Chain RPC URL

# Hyperlane integration
HYPERLANE_WEBHOOK_API_KEY=your-webhook-api-key-here # API key for the webhook authentication
WEBHOOK_URL=https://authentica-api.vercel.app/api/hyperlane/payment-webhook # URL for the webhook endpoint

# Blockchain deployment
PRIVATE_KEY=your-private-key-here # Private key for contract deployments
