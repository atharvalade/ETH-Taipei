# Base URL of your app (use localhost for development, ngrok for mobile testing)
NEXTAUTH_URL=http://localhost:3000

# Optional: For production deployment
# NEXTAUTH_SECRET=random-string-min-32-chars

# World ID credentials - from World Developer Portal
WLD_CLIENT_ID=your-client-id-here
WLD_CLIENT_SECRET=your-client-secret-here

# World Developer Portal API Key
DEV_PORTAL_API_KEY=your-api-key-here

# World App ID - from Developer Portal
APP_ID=authentica-verify-app

# Action name for World ID verification
ACTION_NAME=World_MiniApp

# Blockchain network (for development)
# CHAIN_ID=1 # Ethereum Mainnet
# CHAIN_ID=11155111 # Sepolia
